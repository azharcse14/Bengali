<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rImgV"
        android:src="@mipmap/ic_launcher"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bengaliTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ek"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/rImgV"
        app:layout_constraintTop_toTopOf="@id/rImgV"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/defaultTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/bengaliTv"
        app:layout_constraintStart_toStartOf="@id/bengaliTv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>